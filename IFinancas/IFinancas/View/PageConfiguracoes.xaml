<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IFinancas.View.PageConfiguracoes">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Nome"/>
                <Entry Text="{Binding Nome}" Placeholder="Informe seu nome"/>
            </StackLayout>
            <Button Text="Salvar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>